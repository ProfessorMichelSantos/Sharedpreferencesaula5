<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

    <EditText
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:ems="10"
        android:gravity="center|left"
        android:inputType="text"
        android:text="Nome"
        android:visibility="visible" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:ems="10"
        android:gravity="left"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Email"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnshared"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:visibility="visible"
        android:text="Armazenar Shared Preferences"
        tools:text="Armazenar Shared Preferences"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/lblNomeload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Nome:"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/emailload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="E-mail:"
        android:background="@color/white" />

    <Button
        android:id="@+id/btnsharedload"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_row="5"
        android:layout_column="0"
        android:visibility="visible"
        android:text="Carregar Shared Preferences"
        tools:text="Carregar Shared Preferences"
        android:textColor="@color/white"/>
</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

